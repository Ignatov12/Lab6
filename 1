// Інтерфейс Техніка
interface Техніка {
    void включити();
    void вимкнути();
}

// Абстрактний клас Плеєр, який реалізує інтерфейс Техніка
abstract class Плеєр implements Техніка {
    private String модель;

    public Плеєр(String модель) {
        this.модель = модель;
    }

    public String отриматиМодель() {
        return модель;
    }

    @Override
    public void включити() {
        System.out.println("Плеєр " + модель + " увімкнено.");
    }

    @Override
    public void вимкнути() {
        System.out.println("Плеєр " + модель + " вимкнено.");
    }

    // Абстрактний метод для відтворення контенту
    public abstract void відтворити();
}

// Клас Відеоплеєр, який успадковує від Плеєр
class Відеоплеєр extends Плеєр {
    public Відеоплеєр(String модель) {
        super(модель);
    }

    @Override
    public void відтворити() {
        System.out.println("Відеоплеєр " + отриматиМодель() + " відтворює відео.");
    }

    public static void main(String[] args) {
        Відеоплеєр відеоплеєр = new Відеоплеєр("Sony");
        відеоплеєр.включити();
        відеоплеєр.відтворити();
        відеоплеєр.вимкнути();
    }
}
